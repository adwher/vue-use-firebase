{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist/types",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["ESNext", "DOM"]
    },
    "include": ["src/**/*.ts", "src/**/*.js"]
}
